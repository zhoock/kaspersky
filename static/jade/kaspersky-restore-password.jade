doctype html
html(lang="ru")
	- var title = "kaspersky - восстановление пароля"
	include ../includes/_head

	body
		include ../includes/_header

		// modal
		i.icon-close.js-trigger-modal
		.b-modal
			.b-modal__overlay.open
				.row
					.small-12.columns
						.b-enter
							form.b-restore-password
								h4 restore password

								div
									label(for="name") Nickname or E-mail
									input#name(type="text", placeholder="tarantino@gmail.com")

								a.btn.btn__restore-password.expand restore password

								a.white.agree(href="#") Back

		// /modal

		// container
		.b-container
			section.b-content(role="main")

				.b-menu-section.hide-for-large-up

					// Menu
					nav
						ul.b-menu
							each val in ["tribune", "test", "scoreboard", "prizes", "contest-rules"]
								li
									a(href="#")
										i(class="icon-" + val)
										=val
								=" "
					// /Menu



			//	social-networks
			include ../includes/_social-networks
			//	/social-networks

			.b-container_footer
		// /container

		// footer
		include ../includes/_footer
		// /footer





